    <body>
      <h2><p style="color:rgb(64, 103, 146);">PERSON DETAILS</p></h2>
      <table style="width:70%;font-size: 30px;">
        <form action="/persons/person/updateordeleteperson/<%= data._id%>" method="post">
<tr>
    <td>
        <label>
            First Name:
        </label>
    </td>
    <td><input type="text" name="FirstName" value="<%= data.FirstName%>"pattern="[a-z A-Z]*$">
    </td>
</tr>

<tr>
    <td>
        <label>
            Last Name:
        </label>
    </td>
    <td> <input type="text" name="LastName" value="<%= data.LastName%>"pattern="[a-z A-Z]*$">
    </td>
</tr>

<tr>
    <td>
        <label>
            Id:
        </label>
    </td>
    <td> <input type="number" name="id" value="<%= data.id%>">
    </td>
</tr>

<tr>
    <td>
        <label>
            Birthday:
        </label>
    </td>
    <td>   <input type="text" name="birthday" value="<%= data.birthday%> "pattern="((([0][1-9])|([1-3][0-9]))[-](([0][1-9])|([1][0-2]))[-]([1-2][0-9][0-9][0-9])"> 

    </td>
</tr>
    
<tr>
    <td>
        <label>
            Address:
        </label>
    </td>
</tr>

<tr>
    <td>
        <label>
