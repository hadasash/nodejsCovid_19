<html>
    <head><style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        
        tr:nth-child(even) {
          background-color: #d2dce4;
        }
        </style></head>
    <body>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        
        <a style="font-size:30px;"  href="/persons/addperson" >Add a new person</a> <br><br>
        <table style="font-size:30px;" >
            <tr><th>Details</th><th>First Name</th><th>Last Name</th><th>Id</th></tr>
<% data.forEach(function(item){%>
   
        <tr>
            <td>
<i>
   <a href="/persons/person/<%=item._id%>"  class='far fa-edit' style='font-size:24px'>> 
    
</a>
</i><br>
</td>
<td>
    <%=item.FirstName%> 
    </td>
<td>
    <%=item.LastName%> 
</td>
<td>
     <%=item.id%><br>
</td>
</tr>
   
<%})%>
 </table>
    </body>
</html>